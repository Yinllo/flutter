<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x220"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x220"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_alert"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x13"
            android:layout_marginRight="@dimen/x13"
            android:layout_marginTop="@dimen/y15"
            android:gravity="center"
            android:text=""
            android:textColor="@color/font"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x13"
            android:layout_marginRight="@dimen/x13"
            android:layout_marginTop="@dimen/y12"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/font"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/y12"
            android:background="@color/huibai"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/y13"
                android:paddingTop="@dimen/y13"
                android:text="取消"
                android:textColor="@color/orange"/>

            <View
                android:id="@+id/tv_view"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/huibai"/>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/y13"
                android:paddingTop="@dimen/y13"
                android:background="@drawable/shape_corner_down"
                android:text="确定"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>